    <script>
        // Intersection Observer for scroll animations
        document.addEventListener("DOMContentLoaded", function () {
            const observerOptions = {
                root: null,
                rootMargin: '0px',
                threshold: 0.1
            };

            const observer = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                        observer.unobserve(entry.target); // Only animate once
                    }
                });
            }, observerOptions);

            const elements = document.querySelectorAll('.fade-in-up');
            elements.forEach(el => observer.observe(el));

            // Note: .video-card elements will be observed after placeholders are added below
        });

        // Dynamic Placeholder Logic
        document.addEventListener("DOMContentLoaded", function () {
            // Re-define observer for video cards here or reuse existsing if moved? 
            // Better to consolidate.

            const observerOptions = {
                root: null,
                rootMargin: '0px',
                threshold: 0.1
            };

            const observer = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                        observer.unobserve(entry.target);
                    }
                });
            }, observerOptions);

            function addPlaceholder(gridSelector, columns, extraClass) {
                const grid = document.querySelector(gridSelector);
                if (!grid) return;
                const items = grid.querySelectorAll('.video-card').length;
                const remainder = items % columns;

                if (remainder !== 0) {
                    const placeholder = document.createElement('div');
                    placeholder.className = `video-card ${extraClass || ''}`.trim();
                    placeholder.style.background = 'transparent';
                    placeholder.style.boxShadow = 'none';

                    const container = document.createElement('div');
                    container.className = 'video-container';

                    const inner = document.createElement('div');
                    inner.className = 'placeholder-card';

                    const text = document.createElement('span');
                    text.textContent = 'to be continued';

                    inner.appendChild(text);
                    container.appendChild(inner);
                    placeholder.appendChild(container);
                    grid.appendChild(placeholder);
                }
            }

            // Shorts Grid (3 columns)
            addPlaceholder('.portfolio-grid', 3);

            // Horizontal Grid (2 columns)
            addPlaceholder('.horizontal-grid', 2, 'ratio-16-9');

            // Note: Video cards are NOT observed here to prevent early animation behind preloader
        });

        // Preloader Logic & Animation Trigger
        window.addEventListener('load', () => {
            const preloader = document.getElementById('preloader');
            preloader.classList.add('loaded'); // Trigger CSS animations

            setTimeout(() => {
                preloader.style.display = 'none';
                document.body.style.overflow = 'auto'; // Re-enable scroll

                // Trigger staggered animation for videos
                triggerVideoAnimations();
            }, 1000); // Wait for preloader animation to finish
        });

        function triggerVideoAnimations() {
            const allCards = document.querySelectorAll('.video-card');

            // Re-create observer for off-screen items
            const observerOptions = {
                root: null,
                rootMargin: '0px',
                threshold: 0.1
            };

            const observer = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                        observer.unobserve(entry.target);
                    }
                });
            }, observerOptions);

            allCards.forEach((card, index) => {
                // Animate the first 9 items (viewport) immediately with staggered delay
                if (index < 9) {
                    setTimeout(() => {
                        card.classList.add('visible');
                    }, index * 100); // 100ms stagger
                } else {
                    // Observe the rest for scroll animation
                    observer.observe(card);
                }
            });
        }

        // Dark Mode Logic
        const toggleSwitch = document.querySelector('.theme-switch input[type="checkbox"]');
        const viewCheckbox = document.getElementById('view-checkbox');
        const langCheckbox = document.getElementById('lang-checkbox');

        // Check for saved user preference, if any, on load of the website
        const currentTheme = localStorage.getItem('theme') ? localStorage.getItem('theme') : null;

        if (currentTheme) {
            document.body.classList.add(currentTheme);

            if (currentTheme === 'dark-mode') {
                toggleSwitch.checked = true;
            }
        }

        function switchTheme(e) {
            if (e.target.checked) {
                document.body.classList.add('dark-mode');
                localStorage.setItem('theme', 'dark-mode');
            } else {
                document.body.classList.remove('dark-mode');
                localStorage.setItem('theme', 'light-mode');
            }
        }

        toggleSwitch.addEventListener('change', switchTheme, false);

        // View Switch Logic (Force Mobile)
        function switchView(e) {
            if (e.target.checked) {
                document.body.classList.add('force-mobile');
            } else {
                document.body.classList.remove('force-mobile');
            }
        }

        viewCheckbox.addEventListener('change', switchView);

        // Language Switch Logic (Functional)
        function switchLang(e) {
            const bioEn = document.getElementById('bio-en');
            const bioRu = document.getElementById('bio-ru');

            if (e.target.checked) {
                // Switch to Russian
                bioEn.style.display = 'none';
                bioRu.style.display = 'block';
            } else {
                // Switch to English
                bioEn.style.display = 'block';
                bioRu.style.display = 'none';
            }
        }

        langCheckbox.addEventListener('change', switchLang);

        // Scroll Animation Logic
        const observerOptions = {
            root: null,
            rootMargin: '0px',
            threshold: 0.1
        };
    </script>
</body>

